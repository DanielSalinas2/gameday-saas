// ===========================================
// GameDay SaaS - Prisma Schema
// ===========================================
// This schema defines the database structure.
// Run `npx prisma migrate dev` to apply changes.
// Run `npx prisma generate` to update the client.

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ===========================================
// PHASE 2: User Model (Authentication)
// ===========================================

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String?
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("users")
}

